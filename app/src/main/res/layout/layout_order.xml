<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/white">

    <TextView
        android:id="@+id/tvOReskey"
        android:layout_width="256dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"

        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="25dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="-4dp"
        android:text="1290380912380" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ivOImage"
        android:layout_alignParentStart="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="11dp"
        android:text="Dang Van Chuyen" />

    <ImageView
        android:id="@+id/ivOImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="26dp"
        android:layout_marginTop="37dp"
        android:layout_marginRight="@dimen/mediumSpace"
        android:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/tvOAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvOName"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="7dp"
        android:layout_toRightOf="@id/ivOImage"
        android:text="82 Nguyen Thi Minh Khai"
        android:textColor="@color/colorTextHint"
        android:textSize="@dimen/mediumFontSize" />

    <TextView
        android:id="@+id/tvOName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="40dp"
        android:layout_toRightOf="@id/ivOImage"
        android:text="7 Eleven"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/largeFontSize" />

    <TextView
        android:id="@+id/tvOPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvOAddress"
        android:layout_marginLeft="13dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/ivOImage"
        android:text="40000.0 VND"
        android:textColor="@color/colorTextHint"
        android:textSize="@dimen/mediumFontSize" />

</RelativeLayout>
